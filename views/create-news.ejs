<!DOCTYPE html>
<html lang="pt-br">
    <%- include("inc/head") -%>
<body>

    <form method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleFormControlSelect1">Category</label>
            <select class="form-control" id="exampleFormControlSelect1">
                <% categoriesOptions.forEach((categorie)=>{ %>
                    <option value=<%- categorie.id -%>> <%- categorie.name -%></option>
                <% }); %>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Title News</label>
            <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        

        <div class="form-group">
            <label for="exampleFormControlTextarea1">News Text</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

        </div>
        <div class="photo-view">
            <div id="photos-upload">
                <input type="file" multiple name="photos" id="photos-input" accept="image/*" onchange="PhotosUpload.handleFileInput(event)"><span>Add</span>
            </div>
            <div class="photos-preview">
                
            </div>
        </div>
        <button type="submit">Send New</button>
    </form>
    <script src="javascripts/jquery.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>

</body>
</html>